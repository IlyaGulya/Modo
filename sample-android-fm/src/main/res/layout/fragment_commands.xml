<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flowButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:constraint_referenced_ids="left, right"
        app:flow_horizontalGap="16dp"
        app:flow_horizontalStyle="spread_inside"
        app:flow_wrapMode="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="forwardButton, replaceButton, newRootButton,backToButton,backToRootButton"
        app:flow_maxElementsWrap="1"
        app:flow_verticalGap="16dp"
        app:flow_verticalStyle="packed"
        app:flow_wrapMode="chain" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="backButton, exitButton, multiForwardButton, multiReplaceButton, newStackButton"
        app:flow_maxElementsWrap="1"
        app:flow_verticalGap="16dp"
        app:flow_verticalStyle="packed"
        app:flow_wrapMode="chain" />

    <Button
        android:id="@+id/forwardButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Forward" />

    <Button
        android:id="@+id/replaceButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Replace" />

    <Button
        android:id="@+id/newRootButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="New Root" />

    <Button
        android:id="@+id/backToButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Back To '3'" />

    <Button
        android:id="@+id/backToRootButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Back to root" />

    <Button
        android:id="@+id/multiForwardButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Multi Forward" />

    <Button
        android:id="@+id/multiReplaceButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Multi Replace" />

    <Button
        android:id="@+id/newStackButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="New Stack" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Back" />


    <Button
        android:id="@+id/exitButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Exit" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />


</androidx.constraintlayout.widget.ConstraintLayout>